generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameImages {
  id       String @id @default(uuid())
  name     String
  imageUrl String
  width    Int
  heigth   Int

  Entities   Entities[]
  Highscores Highscores[]
}

model Entities {
  id       String @id @default(uuid())
  name     String
  imageUrl String
  box      Int[]

  gameImage   GameImages @relation(fields: [gameImageId], references: [id])
  gameImageId String
}

model Highscores {
  id   String @id @default(uuid())
  name String
  time String

  gameImage   GameImages @relation(fields: [gameImageId], references: [id])
  gameImageId String
}
